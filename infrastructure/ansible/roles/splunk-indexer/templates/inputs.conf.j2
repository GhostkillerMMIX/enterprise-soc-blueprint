# Splunk Indexer inputs.conf
# Generated by Ansible - Do not modify manually

[default]
host = {{ ansible_hostname }}

# Splunk forwarder input
[splunktcp://{{ splunk_receiver_port }}]
disabled = false

# HTTP Event Collector (disabled on indexers by default)
[http]
disabled = true

# Monitor local Splunk logs
[monitor:///opt/splunk/var/log/splunk/splunkd.log]
index = _internal
sourcetype = splunkd

[monitor:///opt/splunk/var/log/splunk/metrics.log]
index = _internal
sourcetype = splunkd

# System monitoring
[monitor:///var/log/messages]
index = os
sourcetype = linux_messages_syslog

[monitor:///var/log/secure]
index = os
sourcetype = linux_secure

[monitor:///var/log/cron]
index = os
sourcetype = linux_cron

# AWS CloudWatch Logs integration
[aws:cloudwatchlogs]
disabled = true

# Performance monitoring
[perfmon://CPU]
disabled = false
interval = 60
index = os
object = Processor
counters = % Processor Time; % User Time; % Privileged Time
instances = _Total

[perfmon://Memory]
disabled = false
interval = 60
index = os
object = Memory
counters = Available MBytes; Pages/sec; Page Faults/sec

[perfmon://LogicalDisk]
disabled = false
interval = 60
index = os
object = LogicalDisk
counters = % Free Space; Free Megabytes; Current Disk Queue Length
instances = *

[perfmon://Network]
disabled = false
interval = 60
index = os
object = Network Interface
counters = Bytes Total/sec; Packets/sec; Packets Outbound Errors
instances = *
